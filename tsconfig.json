{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["dom", "es2023"],
    "module": "nodenext",
    "target": "es2022",

    "baseUrl": "./",
    "paths": {
      "/*": ["./*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "local-tsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "moduleResolution": "node16"
  }
}
